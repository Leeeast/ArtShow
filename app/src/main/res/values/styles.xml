<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:selectableItemBackground">@null</item>
        <item name="android:selectableItemBackgroundBorderless">@null</item>
    </style>
    <!-- style name以及它所继承的系统Theme主题 -->
    <style name="Theme.Launcher" parent="AppTheme.NoActionBar">
        <!-- 是否允许有标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否全屏-->
        <item name="android:windowFullscreen">true</item>
        <!-- 提示背景图片 -->
        <item name="android:windowBackground">@drawable/bg_launch</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 是否允许背景灰暗 -->
        <item name="android:backgroundDimEnabled">false</item>

        <item name="android:windowAnimationStyle">@style/fadeoutAnimation</item>
        <item name="android:windowHideAnimation">@anim/fade_out</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="main_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/main_tab_padding_top</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/main_tab_text_size</item>
        <item name="android:textColor">@drawable/main_tab_text_selector</item>
        <item name="android:layout_weight">1.0</item>
    </style>

</resources>

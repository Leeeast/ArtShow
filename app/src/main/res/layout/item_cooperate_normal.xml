<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/DIMEN_10PX"
    android:layout_marginLeft="@dimen/DIMEN_15PX"
    android:layout_marginRight="@dimen/DIMEN_15PX"
    android:layout_marginTop="@dimen/DIMEN_10PX"
    android:background="@drawable/shape_cooperate_item"
    android:orientation="vertical"
    android:paddingBottom="@dimen/DIMEN_15PX"
    android:paddingLeft="@dimen/DIMEN_10PX"
    android:paddingRight="@dimen/DIMEN_10PX"
    android:paddingTop="@dimen/DIMEN_15PX">

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="南山戏剧节项目招募"
        android:textColor="@color/cooperate_item_title"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_item_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_title"
        android:layout_marginRight="@dimen/DIMEN_91PX"
        android:layout_marginTop="@dimen/DIMEN_6PX"
        android:text="演出项目要求时长在60分钟以上，项目内容必须高大上，人数在5到10人之间"
        android:textColor="@color/cooperate_item_title"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_des"
        android:layout_marginTop="@dimen/DIMEN_18PX"
        android:text="@string/cooperate_end_time"
        android:textColor="@color/black99"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/lly_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/DIMEN_5PX"
            android:gravity="center_horizontal"
            android:text="@string/cooperate_item_status"
            android:textColor="@color/app_subtitle"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="@dimen/DIMEN_10PX"
            android:layout_height="@dimen/DIMEN_18PX"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/arrow_right" />
    </LinearLayout>
</RelativeLayout>
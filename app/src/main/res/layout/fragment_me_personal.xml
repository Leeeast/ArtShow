<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlv_recommend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteff"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:background="@color/me_personal_line" />

        <RelativeLayout
            android:id="@+id/rly_my_resume"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_47PX">

            <ImageView
                android:id="@+id/iv_resume"
                android:layout_width="@dimen/DIMEN_28PX"
                android:layout_height="@dimen/DIMEN_28PX"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_15PX"
                android:background="@mipmap/icon_resume" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_16PX"
                android:layout_toRightOf="@id/iv_resume"
                android:text="@string/me_my_resume"
                android:textColor="@color/login_btn"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_arrow_resume"
                android:layout_width="@dimen/DIMEN_10PX"
                android:layout_height="@dimen/DIMEN_17PX"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/DIMEN_15PX"
                android:background="@mipmap/arrow_right" />

            <TextView
                android:id="@+id/tv_perfect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/DIMEN_15PX"
                android:layout_toLeftOf="@id/iv_arrow_resume"
                android:text="@string/me_perfect"
                android:textColor="@color/me_personal_des"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/DIMEN_15PX"
            android:layout_marginRight="@dimen/DIMEN_15PX"
            android:background="@color/me_personal_line" />

        <RelativeLayout
            android:id="@+id/rly_pro_auth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_47PX">

            <ImageView
                android:id="@+id/iv_pro_auth"
                android:layout_width="@dimen/DIMEN_28PX"
                android:layout_height="@dimen/DIMEN_28PX"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_15PX"
                android:background="@mipmap/icon_authentication" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_16PX"
                android:layout_toRightOf="@id/iv_pro_auth"
                android:text="@string/me_pro_auth"
                android:textColor="@color/login_btn"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_arrow_auth"
                android:layout_width="@dimen/DIMEN_10PX"
                android:layout_height="@dimen/DIMEN_17PX"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/DIMEN_15PX"
                android:background="@mipmap/arrow_right" />

            <TextView
                android:id="@+id/tv_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/DIMEN_15PX"
                android:layout_toLeftOf="@id/iv_arrow_auth"
                android:text="@string/me_auth"
                android:textColor="@color/me_personal_des"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/me_personal_line" />
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
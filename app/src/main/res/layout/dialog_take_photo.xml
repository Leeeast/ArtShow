<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lly_type_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_15PX"
        android:layout_marginRight="@dimen/DIMEN_15PX"
        android:layout_marginTop="@dimen/DIMEN_15PX"
        android:background="@drawable/shape_bg_gray"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_take_photo"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_50PX"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/photo_take"
            android:textColor="@color/text_cancel"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/me_personal_des" />

        <Button
            android:id="@+id/btn_photo_album"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_50PX"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/photo_album"
            android:textColor="@color/text_cancel"
            android:textSize="20sp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_cancle"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50PX"
        android:layout_below="@id/lly_type_select"
        android:layout_margin="@dimen/DIMEN_15PX"
        android:background="@drawable/shape_bg_white"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/check_photo_album"
        android:textSize="20sp" />
</RelativeLayout>
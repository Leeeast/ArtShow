<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_47PX">

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/DIMEN_15PX"
        android:text="@string/me_pro_auth"
        android:textColor="@color/login_btn"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_item_arrow"
        android:layout_width="@dimen/DIMEN_10PX"
        android:layout_height="@dimen/DIMEN_17PX"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/DIMEN_15PX"
        android:background="@mipmap/arrow_right" />

    <TextView
        android:id="@+id/tv_item_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/DIMEN_15PX"
        android:layout_toLeftOf="@+id/iv_item_arrow"
        android:textColor="@color/me_personal_des"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:layout_alignParentBottom="true"
        android:background="@color/me_personal_line" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_163PX"
    android:layout_marginBottom="@dimen/DIMEN_15PX"
    android:layout_marginLeft="@dimen/DIMEN_15PX"
    android:layout_marginRight="@dimen/DIMEN_15PX"
    android:background="@drawable/shape_theatre_item">

    <LinearLayout
        android:id="@+id/ll_whole"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_163PX"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <com.art.huakai.artshow.widget.ChinaShowImageView
            android:id="@+id/sdv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImageScaleType="fitXY"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="false"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="false"
            android:clickable="false"
            android:focusable="false"
            fresco:roundedCornerRadius="@dimen/DIMEN_5PX" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/DIMEN_15PX"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_works_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:ellipsize="end"
                android:maxLines="1"
                android:clickable="false"
                android:focusable="false"
                android:text="蒙拉丽莎的眼泪"
                android:textColor="#ff1a1a1c"
                android:textSize="@dimen/DIMEN_19PX" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_18PX"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="演员人数"
                    android:textColor="#ff797c87"
                    android:textSize="@dimen/DIMEN_13PX" />

                <TextView
                    android:id="@+id/tv_actor_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_18PX"
                    android:layout_marginRight="@dimen/DIMEN_30PX"
                    android:ellipsize="end"
                    android:clickable="false"
                    android:focusable="false"
                    android:maxLines="1"
                    android:text="20"
                    android:textColor="#ff1a1a1c"
                    android:textSize="@dimen/DIMEN_13PX" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_5PX"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="首演时间"
                    android:clickable="false"
                    android:focusable="false"
                    android:textColor="#ff797c87"
                    android:textSize="@dimen/DIMEN_13PX" />

                <TextView
                    android:id="@+id/tv_show_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_18PX"
                    android:layout_marginRight="@dimen/DIMEN_30PX"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="2017.09.09"
                    android:textColor="#ff1a1a1c"
                    android:textSize="@dimen/DIMEN_13PX" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_1PX"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:layout_marginTop="@dimen/DIMEN_3PX"
                android:background="@color/line_theatre" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_18PX"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_works_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="￥6000"
                    android:textColor="#ff1a1a1c"
                    android:clickable="false"
                    android:focusable="false"
                    android:textSize="@dimen/DIMEN_22PX" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_3PX"
                    android:ellipsize="end"
                    android:clickable="false"
                    android:focusable="false"
                    android:maxLines="1"
                    android:text="元/场"
                    android:textColor="#ff797c87"
                    android:textSize="@dimen/DIMEN_10PX" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
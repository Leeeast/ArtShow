<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:layout_marginLeft="@dimen/DIMEN_14PX"
        android:layout_marginRight="@dimen/DIMEN_14PX"
        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/DIMEN_14PX"
            android:textColor="#ff5a4b41"
            android:text="技术参数"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/DIMEN_14PX"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ffaaa6a2"
                    android:text="舞台高度"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ff000000"
                    android:text="10米"
                    android:layout_marginLeft="@dimen/DIMEN_19PX"
                    />


            </LinearLayout>

            <View
                android:layout_width="@dimen/DIMEN_14PX"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ffaaa6a2"
                    android:text="舞台高度"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ff000000"
                    android:text="10米"
                    android:layout_marginLeft="@dimen/DIMEN_19PX"
                    />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:background="#fff5f3f1"
                android:layout_weight="1"
                />

            <View
                android:layout_width="@dimen/DIMEN_14PX"
                android:layout_height="match_parent"/>
            <View
            android:layout_width="0dp"
            android:layout_height="1px"
                android:background="#fff5f3f1"
                android:layout_weight="1"
                />

        </LinearLayout>


    </LinearLayout>

</ScrollView>
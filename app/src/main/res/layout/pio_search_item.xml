<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_whole"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_36PX"
        android:layout_marginLeft="@dimen/DIMEN_15PX"
        android:layout_marginRight="@dimen/DIMEN_15PX"
        android:background="#ffffffff"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_location_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_35PX"
            android:textColor="#ff62534a"
            android:gravity="center_vertical"
            android:textSize="@dimen/DIMEN_13PX" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="#ffdddddd"
            />


    </LinearLayout>

</RelativeLayout>
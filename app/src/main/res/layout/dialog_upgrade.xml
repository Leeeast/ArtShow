<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/DIMEN_235PX"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/upgrade_bg"
        android:clipChildren="false"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_50PX"
            android:background="@drawable/shape_bg_upgrade_title"
            android:gravity="center"
            android:text="@string/upgrade_title"
            android:textColor="@color/enroll_sub_title"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_10PX"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:minHeight="@dimen/DIMEN_60PX"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text=""
            android:textColor="@color/permission_request_des"
            android:textSize="17sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/DIMEN_20PX"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_down"
                android:layout_width="@dimen/DIMEN_86PX"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_red"
                android:text="@string/upgrade_download"
                android:textColor="@color/whiteff"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="@dimen/DIMEN_86PX"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/DIMEN_15PX"
                android:background="@drawable/border_bg_upgrade"
                android:text="@string/upgrade_exit"
                android:textColor="@color/permission_request_des"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
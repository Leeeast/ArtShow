<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:id="@+id/ll_whole"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_163PX"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="@dimen/DIMEN_15PX"
        android:layout_marginLeft="@dimen/DIMEN_15PX"
        android:layout_marginRight="@dimen/DIMEN_15PX"
        android:background="@drawable/shape_theatre_item"
        android:orientation="horizontal"

        >

        <com.art.huakai.artshow.widget.ChinaShowImageView
            android:id="@+id/sdv"
            android:layout_width="@dimen/DIMEN_125PX"
            fresco:roundedCornerRadius="@dimen/DIMEN_13PX"
            android:layout_height="@dimen/DIMEN_125PX"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImageScaleType="fitXY"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            android:layout_marginLeft="@dimen/DIMEN_15PX"
            android:layout_gravity="center_vertical"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/DIMEN_15PX"
            >

            <TextView
                android:id="@+id/tv_professional_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="谢昱缇"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:textColor="#ff1a1a1c"
                android:textSize="@dimen/DIMEN_19PX" />


            <TextView
                android:id="@+id/tv_majors"
                android:layout_marginTop="@dimen/DIMEN_2PX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="舞台监督/话剧演员/导演"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:textColor="#ff797c87"
                android:textSize="@dimen/DIMEN_13PX" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/DIMEN_15PX"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="所属机构"
                    android:textColor="#ff797c87"
                    android:textSize="@dimen/DIMEN_13PX" />
                <TextView
                    android:id="@+id/tv_subside_organ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/DIMEN_12PX"
                    android:maxLines="1"
                    android:text="国家院团"
                    android:layout_marginRight="@dimen/DIMEN_30PX"
                    android:textColor="#ff1a1a1c"
                    android:textSize="@dimen/DIMEN_13PX" />

            </LinearLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="@dimen/DIMEN_1PX"
       android:background="#ffb3b3b3"
       android:layout_marginRight="@dimen/DIMEN_30PX"
       android:layout_marginTop="@dimen/DIMEN_10PX"
       />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/DIMEN_12PX"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="@dimen/DIMEN_24PX"
                    android:layout_height="@dimen/DIMEN_24PX"
                    android:scaleType="fitXY"
                    android:src="@mipmap/authentication"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/DIMEN_3PX"
                    android:maxLines="1"
                    android:text="专业认证"
                    android:textColor="#ff797c87"
                    android:textSize="@dimen/DIMEN_17PX" />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_whole"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_163PX"
    android:layout_marginBottom="@dimen/DIMEN_7PX"
    android:layout_marginLeft="@dimen/DIMEN_11PX"
    android:layout_marginRight="@dimen/DIMEN_11PX"
    android:background="@drawable/shape_theatre_item"
    android:orientation="horizontal">

    <com.art.huakai.artshow.widget.ChinaShowImageView
        android:id="@+id/sdv"
        android:layout_width="@dimen/DIMEN_125PX"
        android:layout_height="@dimen/DIMEN_125PX"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/DIMEN_15PX"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@color/pic_loading_bg"
        fresco:placeholderImageScaleType="fitXY"
        fresco:roundBottomLeft="true"
        fresco:roundBottomRight="true"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundedCornerRadius="@dimen/DIMEN_13PX" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/DIMEN_15PX"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_professional_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="谢昱缇"
            android:textColor="#ff1a1a1c"
            android:textSize="@dimen/DIMEN_19PX" />


        <TextView
            android:id="@+id/tv_majors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_marginTop="@dimen/DIMEN_2PX"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="舞台监督/话剧演员/导演"
            android:textColor="#ff797c87"
            android:textSize="@dimen/DIMEN_13PX" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_15PX"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="所属机构"
                android:textColor="#ff797c87"
                android:textSize="@dimen/DIMEN_13PX" />

            <TextView
                android:id="@+id/tv_subside_organ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_12PX"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="国家院团"
                android:textColor="#ff1a1a1c"
                android:textSize="@dimen/DIMEN_13PX" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:background="#ffdddddd" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_12PX"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_auth"
                android:layout_width="@dimen/DIMEN_24PX"
                android:layout_height="@dimen/DIMEN_24PX"
                android:scaleType="fitXY"
                android:src="@mipmap/authentication" />

            <TextView
                android:id="@+id/tv_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_3PX"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="专业认证"
                android:textColor="#ff797c87"
                android:textSize="@dimen/DIMEN_17PX" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

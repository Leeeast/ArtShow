<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <include layout="@layout/layout_title_common" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_29PX"
            android:background="@color/set_account_text_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/DIMEN_15PX"
            android:text="@string/account_change_account_pwd"
            android:textColor="@color/login_light"
            android:textSize="12sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_5PX">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_verify_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/change_pwd_line"
                    android:digits="0123456789"
                    android:hint="@string/app_verify_code"
                    android:imeOptions="actionNext"
                    android:inputType="phone|number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/DIMEN_20PX"
                    android:paddingLeft="@dimen/DIMEN_15PX"
                    android:paddingRight="@dimen/DIMEN_15PX"
                    android:textColorHint="@color/login_light"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <FrameLayout
                android:layout_width="@dimen/DIMEN_100PX"
                android:layout_height="match_parent"
                android:layout_gravity="right">

                <View
                    android:layout_width="@dimen/DIMEN_1PX"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/DIMEN_15PX"
                    android:layout_marginRight="@dimen/DIMEN_15PX"
                    android:layout_marginTop="@dimen/DIMEN_15PX"
                    android:background="@color/login_line" />

                <TextView
                    android:id="@+id/tv_send_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:text="@string/send_verify_code"
                    android:textColor="@color/register_new"
                    android:textSize="14sp" />
            </FrameLayout>
        </FrameLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_5PX">

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/change_pwd_line"
                android:hint="@string/pwd_account"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/DIMEN_20PX"
                android:paddingLeft="@dimen/DIMEN_15PX"
                android:paddingRight="@dimen/DIMEN_15PX"
                android:textColorHint="@color/login_light"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_5PX">

            <EditText
                android:id="@+id/edt_pwd_affirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/change_pwd_line"
                android:hint="@string/pwd_affirm"
                android:imeActionId="@+id/register"
                android:imeActionLabel="@string/app_register_title"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingBottom="@dimen/DIMEN_20PX"
                android:paddingLeft="@dimen/DIMEN_15PX"
                android:paddingRight="@dimen/DIMEN_15PX"
                android:textColorHint="@color/login_light"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_change_confirm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_40PX"
            android:layout_marginBottom="@dimen/DIMEN_25PX"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_marginTop="@dimen/DIMEN_40PX"
            android:background="@drawable/shape_bg_red"
            android:gravity="center"
            android:text="@string/account_change_confirm"
            android:textColor="@color/whiteff"
            android:textSize="15sp" />
    </LinearLayout>

</ScrollView>

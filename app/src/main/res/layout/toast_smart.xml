<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/DIMEN_110PX"
        android:layout_height="@dimen/DIMEN_110PX"
        android:background="@drawable/shape_toast_bg"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_toast"
            android:layout_width="@dimen/DIMEN_24PX"
            android:layout_height="@dimen/DIMEN_24PX"
            android:background="@mipmap/toast_tip" />

        <TextView
            android:id="@+id/tv_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:layout_marginRight="@dimen/DIMEN_10PX"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:gravity="center_horizontal"
            android:text="@string/tip_mobile_unregister"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/load_dialog"
    android:layout_width="@dimen/DIMEN_96PX"
    android:layout_height="@dimen/DIMEN_96PX"
    android:background="@drawable/shape_zise_10_gray"
    android:gravity="center">

    <ImageView
        android:id="@+id/round_progress"
        android:layout_width="@dimen/DIMEN_45PX"
        android:layout_height="@dimen/DIMEN_45PX"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/loading_white"
        android:visibility="visible" />

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/round_progress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/loading"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:visibility="visible" />

</RelativeLayout>

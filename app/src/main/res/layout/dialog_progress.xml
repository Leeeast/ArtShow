<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/load_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_zise_10_gray"
    android:gravity="center"
    android:minHeight="@dimen/DIMEN_96PX"
    android:minWidth="@dimen/DIMEN_96PX"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/round_progress"
        android:layout_width="@dimen/DIMEN_45PX"
        android:layout_height="@dimen/DIMEN_45PX"
        android:background="@mipmap/loading_white"
        android:visibility="visible" />

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_2PX"
        android:layout_marginRight="@dimen/DIMEN_2PX"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:text="@string/loading"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:visibility="visible" />

</LinearLayout>

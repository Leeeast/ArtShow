<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">


    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="@dimen/DIMEN_100PX"
        android:layout_height="@dimen/DIMEN_100PX"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@mipmap/loading_gray"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/iv_no_content"
        android:layout_width="@dimen/DIMEN_120PX"
        android:layout_height="@dimen/DIMEN_120PX"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@mipmap/loading_fail"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <com.art.huakai.artshow.widget.headerviewpager.HeaderViewPager
            android:id="@+id/scrollableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:hvp_topOffset="@dimen/DIMEN_40PX">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

                <include layout="@layout/layout_title_btn" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/DIMEN_20PX"
                    android:orientation="horizontal">

                    <com.art.huakai.artshow.widget.ChinaShowImageView
                        android:id="@+id/sdv"
                        android:layout_width="@dimen/DIMEN_120PX"
                        android:layout_height="@dimen/DIMEN_120PX"
                        android:layout_marginLeft="@dimen/DIMEN_14PX"
                        fresco:actualImageScaleType="fitXY"
                        fresco:placeholderImageScaleType="fitXY"
                        fresco:roundedCornerRadius="@dimen/DIMEN_12PX" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/DIMEN_13PX"
                        android:layout_marginRight="@dimen/DIMEN_14PX"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_theatre_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="天桥艺术中心"
                            android:textColor="#ff5a4b41"
                            android:textSize="@dimen/DIMEN_23PX" />

                        <TextView
                            android:id="@+id/tv_theatre_kind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/DIMEN_12PX"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="大剧场"
                            android:textColor="#ffaaa6a2"
                            android:textSize="@dimen/DIMEN_13PX" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/DIMEN_20PX">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:layout_gravity="bottom"
                                android:textColor="#ff5a4b41"
                                android:textSize="@dimen/DIMEN_14PX" />

                            <TextView
                                android:id="@+id/tv_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/DIMEN_2PX"
                                android:maxLength="8"
                                android:text="4000"
                                android:textColor="#ffe93c2c"
                                android:textSize="@dimen/DIMEN_19PX" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/DIMEN_4PX"
                                android:text="场"
                                android:textColor="#ff9b9b9b"
                                android:textSize="@dimen/DIMEN_14PX" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_14PX"
                    android:layout_marginTop="@dimen/DIMEN_25PX"
                    android:text="基本资料"
                    android:textColor="#ff5a4b41"
                    android:textSize="@dimen/DIMEN_20PX" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_50PX"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/DIMEN_14PX"
                    android:layout_marginRight="@dimen/DIMEN_14PX"
                    android:layout_marginTop="@dimen/DIMEN_10PX">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出品方"
                        android:textColor="#ffaaa6a2"
                        android:textSize="@dimen/DIMEN_14PX" />


                    <TextView
                        android:id="@+id/tv_producers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/DIMEN_40PX"
                        android:text="万和天翼"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/DIMEN_14PX" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_1PX"
                    android:layout_marginLeft="@dimen/DIMEN_14PX"
                    android:layout_marginRight="@dimen/DIMEN_14PX"
                    android:background="#fff5f3f1" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_50PX"
                    android:layout_marginLeft="@dimen/DIMEN_14PX"
                    android:layout_marginRight="@dimen/DIMEN_14PX"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="演员人数"
                            android:textColor="#ffaaa6a2"
                            android:textSize="@dimen/DIMEN_14PX"

                            />

                        <TextView
                            android:id="@+id/tv_actor_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/DIMEN_40PX"
                            android:text="26人"
                            android:textColor="#ff000000"
                            android:textSize="@dimen/DIMEN_14PX" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/DIMEN_14PX"
                        android:layout_height="match_parent"
                      />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="城市"
                            android:textColor="#ffaaa6a2"
                            android:textSize="@dimen/DIMEN_14PX" />


                        <TextView
                            android:id="@+id/tv_city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/DIMEN_40PX"
                            android:text="北京"
                            android:textColor="#ff000000"
                            android:textSize="@dimen/DIMEN_14PX" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_14PX"
                    android:layout_marginRight="@dimen/DIMEN_14PX"

                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/DIMEN_1PX"
                        android:layout_weight="1"
                        android:background="#fff5f3f1" />

                    <View
                        android:layout_width="@dimen/DIMEN_14PX"
                        android:layout_height="match_parent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/DIMEN_1PX"
                        android:layout_weight="1"
                        android:background="#fff5f3f1" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_50PX"
                    android:layout_marginLeft="@dimen/DIMEN_14PX"
                    android:layout_marginRight="@dimen/DIMEN_14PX"
                  android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="适合剧场"
                            android:textColor="#ffaaa6a2"
                            android:textSize="@dimen/DIMEN_14PX"

                            />

                        <TextView
                            android:id="@+id/tv_thratre_size"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/DIMEN_40PX"
                            android:text="中剧场"
                            android:textColor="#ff000000"
                            android:textSize="@dimen/DIMEN_14PX" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/DIMEN_14PX"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="演出时长"
                            android:textColor="#ffaaa6a2"
                            android:textSize="@dimen/DIMEN_14PX" />


                        <TextView
                            android:id="@+id/tv_show_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/DIMEN_12PX"
                            android:text="90min"
                            android:textColor="#ff000000"
                            android:textSize="@dimen/DIMEN_14PX" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_14PX"
                    android:layout_marginRight="@dimen/DIMEN_14PX"

                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/DIMEN_1PX"
                        android:layout_weight="1"
                        android:background="#fff5f3f1" />

                    <View
                        android:layout_width="@dimen/DIMEN_14PX"
                        android:layout_height="match_parent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/DIMEN_1PX"
                        android:layout_weight="1"
                        android:background="#fff5f3f1" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_50PX"
                    android:layout_marginLeft="@dimen/DIMEN_14PX"
                    android:layout_marginRight="@dimen/DIMEN_14PX"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="首演时间"
                            android:textColor="#ffaaa6a2"
                            android:textSize="@dimen/DIMEN_14PX"

                            />

                        <TextView
                            android:id="@+id/tv_first_show_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/DIMEN_40PX"
                            android:text="2017.08.20"
                            android:textColor="#ff000000"
                            android:textSize="@dimen/DIMEN_14PX" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/DIMEN_14PX"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已演出次数"
                            android:textColor="#ffaaa6a2"
                            android:textSize="@dimen/DIMEN_14PX" />


                        <TextView
                            android:id="@+id/tv_already_show_times"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/DIMEN_12PX"
                            android:text="5场"
                            android:textColor="#ff000000"
                            android:textSize="@dimen/DIMEN_14PX" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_14PX"
                    android:layout_marginRight="@dimen/DIMEN_14PX"

                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/DIMEN_1PX"
                        android:layout_weight="1"
                        android:background="#fff5f3f1" />

                    <View
                        android:layout_width="@dimen/DIMEN_14PX"
                        android:layout_height="match_parent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/DIMEN_1PX"
                        android:layout_weight="1"
                        android:background="#fff5f3f1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_50PX"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/DIMEN_14PX"
                    android:layout_marginRight="@dimen/DIMEN_14PX"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可演出日期"
                        android:textColor="#ffaaa6a2"
                        android:textSize="@dimen/DIMEN_14PX" />


                    <TextView
                        android:id="@+id/tv_show_useful_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/DIMEN_14PX"
                        android:text="2017.10.25～2017.10.31"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/DIMEN_14PX" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_1PX"
                    android:layout_marginLeft="@dimen/DIMEN_14PX"
                    android:layout_marginRight="@dimen/DIMEN_14PX"
                    android:background="#fff5f3f1" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_14PX"
                    android:layout_marginTop="@dimen/DIMEN_25PX"
                    android:text="项目介绍"
                    android:textColor="#ff5a4b41"
                    android:textSize="@dimen/DIMEN_20PX" />

                <TextView
                    android:id="@+id/tv_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_14PX"
                    android:layout_marginRight="@dimen/DIMEN_14PX"
                    android:layout_marginTop="@dimen/DIMEN_6PX"
                    android:text="Occupying floors 51-59, this spacious suite enjoys beautiful views of Bangkok City and Chao Phraya River. It includes an LCD TV, free soft drinks from the minibar and Nespresso coffee machine. A bathroom has a separate bathtub and luxurious bath toiletries."
                    android:textColor="#ff928470"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:paddingBottom="@dimen/DIMEN_25PX"
                    />

                <TextView
                    android:id="@+id/tv_actor_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_14PX"
                    android:text="主创介绍"
                    android:visibility="gone"
                    android:textColor="#ff5a4b41"
                    android:textSize="@dimen/DIMEN_20PX" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_14PX"
                    android:layout_marginTop="@dimen/DIMEN_5PX"
                    android:paddingBottom="@dimen/DIMEN_25PX"
                    android:visibility="gone"
                    >

                </android.support.v7.widget.RecyclerView>


            </LinearLayout>


            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/stl_dis_tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_40PX"
                android:background="@color/whiteff"
                tl:tl_indicator_color="@color/app_common_red"
                tl:tl_indicator_height="2dp"
                tl:tl_tab_space_equal="true"
                tl:tl_textSelectColor="@color/app_common_red"
                tl:tl_textUnselectColor="@color/login_light"
                tl:tl_textsize="18sp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dis_viewpager_bg" />

        </com.art.huakai.artshow.widget.headerviewpager.HeaderViewPager>


        <LinearLayout
            android:id="@+id/ll_make_telephone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_50PX"
            android:layout_alignParentBottom="true"
            android:background="#ffdddddd"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/DIMEN_17PX"
                android:layout_height="@dimen/DIMEN_17PX"
                android:src="@mipmap/phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_13PX"
                android:text="联系出品方"
                android:textColor="#ff4a4a4a"
                android:textSize="@dimen/DIMEN_18PX" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
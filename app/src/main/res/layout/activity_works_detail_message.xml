<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    >

<ScrollView
android:layout_width="match_parent"
android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_50PX"
            >

            <include
                layout="@layout/layout_title_common" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="@dimen/DIMEN_21PX"
                android:layout_height="@dimen/DIMEN_21PX"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/DIMEN_14PX"
                android:clickable="true"
                android:src="@mipmap/share_icon" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <com.art.huakai.artshow.widget.ChinaShowImageView
                android:id="@+id/sdv"
                android:layout_width="@dimen/DIMEN_120PX"
                android:layout_height="@dimen/DIMEN_120PX"
                fresco:roundedCornerRadius="@dimen/DIMEN_12PX"
                fresco:actualImageScaleType="fitXY"
                fresco:placeholderImageScaleType="fitXY"
                android:layout_marginLeft="@dimen/DIMEN_14PX"
                />

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/DIMEN_14PX"
                android:layout_marginLeft="@dimen/DIMEN_13PX"
                >

                <TextView
                    android:id="@+id/tv_theatre_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_23PX"
                    android:textColor="#ff5a4b41"
                    android:text="天桥艺术中心"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

                <TextView
                    android:id="@+id/tv_theatre_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_13PX"
                    android:textColor="#ffaaa6a2"
                    android:text="大剧场"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/DIMEN_12PX"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_20PX"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_authentication"
                        android:layout_width="@dimen/DIMEN_25PX"
                        android:layout_height="@dimen/DIMEN_25PX"
                        android:src="@mipmap/authentication" />

                    <TextView
                        android:id="@+id/tv_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/DIMEN_19PX"
                        android:textColor="#ffe93c2c"
                        android:text="4000"
                        android:maxLength="8"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/DIMEN_2PX"
                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/DIMEN_14PX"
                        android:textColor="#ff9b9b9b"
                        android:text="元/天"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/DIMEN_4PX"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/DIMEN_20PX"
            android:textColor="#ff5a4b41"
            android:text="基本资料"
            android:layout_marginLeft="@dimen/DIMEN_14PX"
            android:layout_marginTop="@dimen/DIMEN_25PX"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_14PX"
            android:layout_marginRight="@dimen/DIMEN_14PX"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/DIMEN_14PX"
                android:textColor="#ffaaa6a2"
                android:text="出品方"
                />


            <TextView
                android:id="@+id/tv_producers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/DIMEN_14PX"
                android:textColor="#ff000000"
                android:text="万和天翼"
                android:layout_weight="1"
                android:paddingLeft="@dimen/DIMEN_40PX"
                android:maxLines="1"
                android:ellipsize="end"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:layout_marginLeft="@dimen/DIMEN_14PX"
            android:layout_marginRight="@dimen/DIMEN_14PX"
            android:layout_marginTop="@dimen/DIMEN_5PX"
            android:background="#fff5f3f1"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_14PX"
            android:layout_marginRight="@dimen/DIMEN_14PX"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ffaaa6a2"
                    android:text="演员人数"

                    />
                <TextView
                    android:id="@+id/tv_actor_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ff000000"
                    android:text="26人"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/DIMEN_40PX"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

            </LinearLayout>

            <View
                android:layout_width="@dimen/DIMEN_14PX"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ffaaa6a2"
                    android:text="城市"
                    />


                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ff000000"
                    android:text="北京"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/DIMEN_40PX"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_14PX"
            android:layout_marginRight="@dimen/DIMEN_14PX"
            android:layout_marginTop="@dimen/DIMEN_5PX"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/DIMEN_1PX"
                android:layout_weight="1"
                android:background="#fff5f3f1"
                />
            <View
                android:layout_width="@dimen/DIMEN_14PX"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/DIMEN_1PX"
                android:layout_weight="1"
                android:background="#fff5f3f1"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_14PX"
            android:layout_marginRight="@dimen/DIMEN_14PX"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ffaaa6a2"
                    android:text="适合剧场"

                    />
                <TextView
                    android:id="@+id/tv_thratre_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ff000000"
                    android:text="中剧场"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/DIMEN_40PX"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

            </LinearLayout>

            <View
                android:layout_width="@dimen/DIMEN_14PX"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ffaaa6a2"
                    android:text="演出时长"
                    />


                <TextView
                    android:id="@+id/tv_show_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ff000000"
                    android:text="90min"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/DIMEN_12PX"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_14PX"
            android:layout_marginRight="@dimen/DIMEN_14PX"
            android:layout_marginTop="@dimen/DIMEN_5PX"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/DIMEN_1PX"
                android:layout_weight="1"
                android:background="#fff5f3f1"
                />
            <View
                android:layout_width="@dimen/DIMEN_14PX"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/DIMEN_1PX"
                android:layout_weight="1"
                android:background="#fff5f3f1"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_14PX"
            android:layout_marginRight="@dimen/DIMEN_14PX"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ffaaa6a2"
                    android:text="首演时间"

                    />
                <TextView
                    android:id="@+id/tv_first_show_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ff000000"
                    android:text="2017.08.20"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/DIMEN_40PX"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

            </LinearLayout>

            <View
                android:layout_width="@dimen/DIMEN_14PX"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ffaaa6a2"
                    android:text="已演出次数"
                    />


                <TextView
                    android:id="@+id/tv_already_show_times"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DIMEN_14PX"
                    android:textColor="#ff000000"
                    android:text="5场"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/DIMEN_12PX"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_14PX"
            android:layout_marginRight="@dimen/DIMEN_14PX"
            android:layout_marginTop="@dimen/DIMEN_5PX"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/DIMEN_1PX"
                android:layout_weight="1"
                android:background="#fff5f3f1"
                />
            <View
                android:layout_width="@dimen/DIMEN_14PX"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/DIMEN_1PX"
                android:layout_weight="1"
                android:background="#fff5f3f1"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/DIMEN_20PX"
            android:textColor="#ff5a4b41"
            android:text="作品介绍"
            android:layout_marginLeft="@dimen/DIMEN_14PX"
            android:layout_marginTop="@dimen/DIMEN_25PX"
            />

        <TextView
            android:id="@+id/tv_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/DIMEN_14PX"
            android:textColor="#ff928470"
            android:text="Occupying floors 51-59, this spacious suite enjoys beautiful views of Bangkok City and Chao Phraya River. It includes an LCD TV, free soft drinks from the minibar and Nespresso coffee machine. A bathroom has a separate bathtub and luxurious bath toiletries."
            android:layout_marginLeft="@dimen/DIMEN_14PX"
            android:layout_marginRight="@dimen/DIMEN_14PX"
            android:layout_marginTop="@dimen/DIMEN_6PX"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/DIMEN_20PX"
            android:textColor="#ff5a4b41"
            android:text="主创介绍"
            android:layout_marginLeft="@dimen/DIMEN_14PX"
            android:layout_marginTop="@dimen/DIMEN_25PX"
            />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_14PX"
            android:layout_marginTop="@dimen/DIMEN_5PX"
            ></android.support.v7.widget.RecyclerView>



        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/stl_dis_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_47PX"
            android:background="@color/whiteff"
            tl:tl_indicator_color="@color/black00"
            tl:tl_indicator_corner_radius="2.5dp"
            tl:tl_indicator_height="5dp"
            tl:tl_indicator_width="5dp"
            tl:tl_tab_space_equal="true"
            tl:tl_textSelectColor="@color/dis_tab_text_s"
            tl:tl_textUnselectColor="@color/dis_tab_text_n"
            tl:tl_textsize="16sp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/dis_viewpager_bg" />




    </LinearLayout>


</ScrollView>


    <LinearLayout
        android:id="@+id/ll_make_telephone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50PX"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="#ffdddddd"
        >
        
        <ImageView
            android:layout_width="@dimen/DIMEN_17PX"
            android:layout_height="@dimen/DIMEN_17PX"
            android:src="@mipmap/phone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/DIMEN_18PX"
            android:textColor="#ff4a4a4a"
            android:text="联系出品方"
            android:layout_marginLeft="@dimen/DIMEN_13PX"
            />

    </LinearLayout>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_common" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/DIMEN_26PX">

        <TextView
            android:id="@+id/tv_theatre_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_25PX"
            android:ellipsize="end"
            android:maxLength="8"
            android:text="朝阳剧场"
            android:textColor="#ff5a4b41"
            android:textSize="@dimen/DIMEN_32PX" />


        <TextView
            android:id="@+id/tv_theatre_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_theatre_name"
            android:layout_marginTop="@dimen/DIMEN_14PX"
            android:ellipsize="end"
            android:maxLength="15"
            android:text="朝阳剧场"
            android:textColor="#ff9b9b9b"
            android:textSize="@dimen/DIMEN_14PX" />

        <ImageView
            android:id="@+id/iv_goto_address"
            android:layout_width="@dimen/DIMEN_30PX"
            android:layout_height="@dimen/DIMEN_37PX"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_marginTop="@dimen/DIMEN_37PX"
            android:clickable="true"
            android:focusable="true"
            android:src="@mipmap/goto_address" />

    </RelativeLayout>


</LinearLayout>
